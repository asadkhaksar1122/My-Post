<% layout('layout/boilerplate.ejs') -%>
<body>
    <div class="card mb-3 mt-3 mx-auto" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/profile/<%= user.profile %>" class="img-fluid rounded-start " style="display: block; margin: auto; width: 200px; height: 200px;" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">The Full name is: <b><%= user.firstname %>  <%= user.secondname %></b></h5>
        <h5 class="card-title">The username: <i><%= user.username %></i></h5>
        <p class="card-text">The Gmail is : <strong><b> <%= user.email %></b></strong></p>
        <p class="card-text"><small class="text-body-secondary">Be carefull before the edit Profile</small></p>
        <a href="/editname" class="btn btn-secondary">Edit Name</a>
        <a href="/changepassword" class="btn btn-primary">change Password</a>
      </div>
    </div>
  </div>
</div>
</body>